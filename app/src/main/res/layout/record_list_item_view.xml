<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/record_list_item_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="title"/>

        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        
        <TextView
            android:id="@+id/record_list_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00:00"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/record_list_item_player_button_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right|center"
        android:layout_marginRight="10dp">
        <Button
            android:id="@+id/record_list_item_player_button_pause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="Ⅱ"
            />
        <Button
            android:id="@+id/record_list_item_player_button_stop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="■"
            />
    </LinearLayout>

</FrameLayout>
